<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Xamarin.ParOuImpar">
    <ContentPage.Content>
        <StackLayout Padding="32" HorizontalOptions="Start" VerticalOptions="Center">
            <Label Text="Verifica se um número é impar ou par"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="etNumber" Keyboard="Numeric" Placeholder="Digite um número"/>
            <Button x:Name="btnExecutar" Text="Executar"/>
            <Label x:Name="lbResultado"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>